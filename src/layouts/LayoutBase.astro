---
import Footer from "./components/Footer.astro";
import Header from "./components/Header.astro";

interface Props {
	title: string;
	description: string;
	canonical: string;
}

const { title, description, canonical } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>{title} | Kembec</title>
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>

		<meta
			name="description"
			content={description}
		/>
		<meta
			property="twitter:creator"
			content="@Kembec"
		/>
		<meta
			name="robots"
			content="index,follow"
		/>
		<link
			rel="canonical"
			href={`https://tailwind.kembec.com${canonical}`}
		/>

		<!-- Style -->
		<link
			rel="preconnect"
			href="https://fonts.googleapis.com"
		/>
		<link
			rel="preconnect"
			href="https://fonts.gstatic.com"
			crossorigin
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
			rel="stylesheet"
		/>

		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/favicon/apple-touch-icon.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/favicon/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/favicon/favicon-16x16.png"
		/>
		<link
			rel="manifest"
			href="/favicon/site.webmanifest"
		/>
		<link
			rel="mask-icon"
			href="/favicon/safari-pinned-tab.svg"
			color="#5bbad5"
		/>
		<link
			rel="shortcut icon"
			href="/favicon/favicon.ico"
		/>
		<link
			rel="icon"
			href="/favicon/favicon.svg"
		/>
		<meta
			name="msapplication-TileColor"
			content="#da532c"
		/>
		<meta
			name="msapplication-config"
			content="/favicon/browserconfig.xml"
		/>
		<meta
			name="theme-color"
			content="#ffffff"
		/>
	</head>
	<body class="base">
		<Header />
		<article>
			<slot />
		</article>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--font-serif: "Roboto Slab", serif;
		--font-sans: "Roboto", sans-serif;
	}

	html {
		font-family: var(--font-sans);
		@apply bg-zinc-900 text-zinc-100;
	}
	h1 {
		font-family: var(--font-serif);
	}
	h1,
	h2,
	h3 {
		@apply text-white;
	}

	.base {
		@apply flex flex-col w-full min-h-[100dvh];
	}
	.base > * {
		@apply lg:px-[10vw] px-5;
	}

	.base > article {
		@apply py-16 flex flex-col h-full min-h-[calc(100dvh-8rem)];
	}

	.base > article > h1 {
		@apply text-5xl font-bold text-center;
	}
	.base > article > h2 {
		@apply text-3xl font-semibold tracking-wider;
	}
	.base > article section {
		@apply flex flex-col w-full;
	}

	blockquote {
		@apply bg-neutral-800 mx-auto my-5 p-5 rounded-lg border border-neutral-700 select-all;
	}
</style>
